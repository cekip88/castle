@import mixins
@import vars
@import groups

font_inc($f_bold,'Gilroy-Bold.woff2')

*
	m(0)
	p(0)
	box-sizing border-box

	
button,input
	background none
	border none

	
img,svg
	max-width 100%

	
a,button
	font 1em $f_bold
	text-transform uppercase
	text-decoration none
	cursor pointer

ul,ol,dl
	list-style none


body
	font 14px $f_bold
	color RGB($white)
	bgc(RGB($black))
	position relative
	&:after
		wh(100%)
		af()
		background-image url('/img/main-bgc.jpg')
		opacity .6
		absolute top 0 left 0
		z-index -1

		
.section
	w(100%)
	p(0 10px)
	+tablet()
		p(0 20px)
	+desktop()
		w(1170px)
		p(0)
		m(0 auto)

	
.notScrollable
	overflow hidden

	
.head
	wh(100%,80px)
	p(10px 0)
	overflow hidden
	text-transform uppercase
	absolute top 0 left 0
	z-index 100
	tr()
	+tablet-large()
		p(0)
		overflow visible
	+desktop()
		h(144px)
		padding-top 24px
	&.active
		height 100vh
		background-image url('/img/main-bgc.png')
		bgc(RGB($black))
		.head
			&-burger
				&-line
					&:first-child,&:last-child
						trans(0)
	&,&.active
		+tablet-large()
			h(96px)
	.section
		h(100%)
		df({
			df: '.head .section'
		})
		flex-direction column
		+tablet-large()
			flex-direction row
			align-items center
			justify-content space-between
			position relative
	&-row
		df({
			df: '.head-row'
			ali: center
			jus: space-between
		})
		+tablet-large()
			order 1
	&-logo
		+tablet-large()
			trans(-50%,0)
			position absolute
			left 50%
	&-burger
		wh(28px)
		df({
			df: '.head-burger'
			jus: center
		})
		flex-direction column
		row-gap 8px
		+tablet-large()
			dn()
		&-line
			h(2px)
			bgc(RGB($white))
			tr()
			&:first-child
				w(16px)
				trans(12px,0)
			&:nth-child(2)
				w(100%)
			&:last-child
				w(20px)
				trans(8px,0)
	&-nav
		margin-top 50px
		p(0 20px)
		df({
			df: '.head-nav'
		})
		flex-direction column
		row-gap 20px
		+tablet-large()
			m(0)
			p(0)
			order 2
			flex-direction row
			column-gap 20px
		+desktop()
			column-gap 40px
		&-link
			color RGB($white)
	&-address
		margin-top auto
		margin-bottom 30px
		df({
			df: '.head-address'
			ali: center
		})
		column-gap 10px
		color RGB($white)
		+tablet-large()
			m(0)
		&-icon
			wh(24px)


.btn
	wh(160px,72px)
	bgc(RGB($orange))
	color RGB($white)
	text-transform uppercase
	+tablet()
		w(180px)
	+desktop()
		border 2px solid RGB($orange)
		tr()
		&:hover
			bgc(transparent)

	
.hover
	+desktop()
		position relative
		&:after
			af()
			wh(0,2px)
			bgc(RGB($white))
			tr()
			position absolute
			left 50%
			bottom -2px
		&:hover
			&:after
				w(100%)
				left 0
				
	
.title
	font-size 24px
	text-transform uppercase
	text-align center
	+tablet()
		font-size 36px
	+desktop()
		font-size 48px
		letter-spacing -.96px
	
	
.block
	padding-top 60px
	+tablet()
		padding-top 90px
	+desktop()
		padding-top 120px
	.title
		m(0 0 20px)
		+tablet-large()
			margin-bottom 37px
	&-buttons
		df({
			df: '.block-buttons'
			ali: center
		})
		column-gap 20px
		text-transform uppercase
		+tablet()
			column-gap 40px
		&-right
			color RGB($white)


.lines
	w(100%)
	df({
		df: '.lines'
		ali: center
		jus: center
	})
	column-gap 20px
	overflow hidden
	&-icon
		wh(20px)
		flex-shrink 0
		+tablet-large()
			wh(40px)
	&-item
		wh(calc(100% - 30px),4px)
		+tablet-large()
			w(calc(50% - 40px))
.main
	p(80px 0 0)
	+tablet-large()
		padding-top 96px
	+desktop()
		padding-top 144px
	&-slider
		+tablet()
			position relative
		.lines
			margin-bottom 8px
		&-control
			w(max-content)
			m(0 auto)
			p(7px 10px)
			df({
				df: '.main-slider-control'
				ali: center
				jus: center
			})
			bgc($blackBGC)
			column-gap 20px
			border-radius 15px
			+tablet()
				m(0)
				p(10px 7px)
				flex-direction column
				position absolute
				z-index 10
				right 20px
				top 50%
				trans(0,-50%)
			+tablet-large()
				row-gap 40px
			+desktop()
				right calc(50% - (1170px / 2))
		&-dot
			wh(16px)
			border-radius 100%
			bgc(RGB($white))
			tr()
			+desktop()
				&:hover
					bgc(RGB($orange))
			&.active
				bgc(RGB($orange))
	&-slides
		w(100%)
		df({
			df: '.main-slides'
			ali: stretch
		})
		overflow hidden
	&-slide
		w(100%)
		df({
			df:'.main-slide'
		})
		flex-shrink 0
		flex-direction column
		+tablet()
			h(384px)
			flex-direction row
			align-items center
			position relative
		+tablet-large()
			h(465px)
		+desktop()
			h(744px)
		&-bgc
			wh(100vw,38.75vw)
			opacity .9
			+tablet()
				wh(100%)
				position absolute
			img
				wh(100%)
				display block
				object-fit cover
		&-info
			w(100%)
			p(20px 10px)
			color RGB($white)
			+tablet()
				p(0 20px)
				display flex
				justify-content center
				flex-direction column
				position relative
				z-index 1
			+desktop()
				w(1170px)
				m(0 auto)
				p(0)
		&-title
			m(0 0 20px!important)
			text-align left!important
			+tablet()
				w(440px!important)
				margin-top 0!important
			+desktop()
				font-size 48px
				letter-spacing -.96px
		&-text
			margin-bottom 40px
			lih(1.4)
			+tablet()
				w(421px)
				font-size 16px
			+desktop()
				font-size 20px
				margin-bottom 80px
	
			
.recommend
	&-list
		df({
			df: '.recommend-list'
		})
		flex-wrap wrap
		row-gap 24px
		column-gap 16px
	&-item
		+tablet()
			w(calc(50% - 8px))
		&-img
			margin-bottom 14px
			box-shadow 0 4px 4px 0 rgba(0,0,0,.25)
			+tablet()
				wh(100%,163px)
			+tablet-large()
				h(226px)
			+desktop()
				h(269px)
			img
				wh(100%)
				object-fit cover
		&-title
			margin-bottom 10px
			font-size 20px
			text-transform uppercase
			letter-spacing -.4px
		&-text
			max-width 477px
			margin-bottom 15px
			lih(1.75)
			+tablet-large()
				font-size 16px
			
			
.building
	&-list
		df({
			df: '.building-list'
		})
		flex-wrap wrap
		gap 18px
	&-item
		w(100%)
		+tablet()
			w(calc(50% - 9px))
		+tablet-large()
			w(calc((100% - 54px) / 4))
		&-link
			w(100%)
			df({
				df: '.building-item'
			})
			flex-direction column
			+desktop()
				box-sizing content-box
				border 4px solid transparent
				tr()
				&:hover
					border-color RGB($orange)
		&-img
			wh(100%,264px)
			display block
			img
				wh(100%)
				object-fit cover
		&-text
			p(39px 0 33px)
			bgc(RGB($white))
			font-size 20px
			text-align center
			color RGB($black)
			text-transform uppercase
			letter-spacing -.4px
.promo
	&-slider
		&-control
			+desktop()
				right 99px
	&-slide
		+desktop()
			h(456px)
		&-info
			+desktop()
				p(0 99px)
.contacts
	&-map
		wh(100%,55vw)
		min-height 350px
		+desktop()
			h(648px)
		iframe
			wh(100%)
			opacity .9
	&-list
		padding-top 20px
		df({
			df: '.contacts-list'
			ali: center
			jus: space-between
		})
		flex-wrap wrap
		row-gap 20px
		+tablet-large()
			padding-top 35px
	&-item
		w(100%)
		df({
			df: '.contacts-item'
			ali: center
		})
		column-gap 20px
		+tablet()
			w(50%)
		+desktop()
			w(initial)
		&-icon
			wh(28px)
		&-title,&-text
			font-size 20px
			letter-spacing -2%
			text-transform uppercase
		&-text
			color RGB($orange)
		
.foot
	padding-top 50px
	+tablet-large()
		padding-top 98px
	&-row
		p(20px 0)
		df({
			df: '.foot-row'
			ali: center
		})
		flex-direction column
		row-gap 20px
		+tablet()
			flex-direction row
			justify-content space-between
		+tablet-large()
			p(63px 0 70px)
			position relative
	&-links
		df({
			df: '.foot-links'
			ali: center
		})
		column-gap 40px
		+tablet-large()
			position absolute
			left 50%
			trans(-50%)
	&-link
		color RGB($white)
		text-transform uppercase
	&-soc
		df({
			df: '.foot-soc'
			ali: center
		})
		column-gap 44px
		&-icon
			wh(21px)