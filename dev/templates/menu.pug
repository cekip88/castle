extends template/main
append vars
	-
		page_title = 'Menu'
block content
	section.menu
		.ondesk-img
			+img('pepper.png')
		.ondesk-img
			+img('tree-leaf.png')
		.ondesk-img
			+img('garlic.png')
		.ondesk-img
			+img('lemon.png')
		.ondesk-img
			+img('tomato.png')
		.ondesk-img
			+img('garlic.png')
		.ondesk-img
			+img('peeper.png')
		.ondesk-img
			+img('tomato.png')
		.section
			nav.menu-nav
				button.menu-nav-btn.active Main Dishes
				button.menu-nav-btn Snacks
				button.menu-nav-btn To beer
				button.menu-nav-btn Salads
				button.menu-nav-btn Drinks
		.section
			ul.recommend-list
				-for (let i = 0; i < 11; i++)
					li.recommend-item
						.recommend-item-img
							+img('menu-img.jpg')
						h5.recommend-item-title BBQ SMOKE
						p.recommend-item-text It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.
						.block-buttons
							a(href="/order").btn Add to order
							a(href='/product').btn-transparent More Info
							span.block-buttons-right $25.00
	section.block.recommend.recommend-menu
		.ondesk-img.right
			+img('lemon.png')
		.ondesk-img.left
			+img('tree-leaf.png')
		.section
			h2.title We recommend
			ul.recommend-list
				-for (let i = 0; i < 2; i++)
					li.recommend-item
						.recommend-item-img
							+img('recommend-1.jpg')
						h5.recommend-item-title BBQ SMOKE
						p.recommend-item-text It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.
						.block-buttons
							a(href="/order").btn Add to order
							a(href='/product').btn-transparent More Info
							span.block-buttons-right $25.00
					li.recommend-item
						.recommend-item-img
							+img('recommend-2.jpg')
						h5.recommend-item-title BURGER & french fries
						p.recommend-item-text It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.
						.block-buttons
							a(href="/order").btn Add to order
							a(href='/product').btn-transparent More Info
							span.block-buttons-right $25.00
	section.block.contacts.contacts-menu
		.ondesk-img.top-left
			+img('garlic.png')
		.ondesk-img.top-right
			+img('tomato.png')
		.ondesk-img.bottom-left
			+img('tree-leaf.png')
		.ondesk-img.bottom-right
			+img('tree-leaf.png')
