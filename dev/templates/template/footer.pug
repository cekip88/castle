					//			use(xlink:href='/img/sprite.svg#apple')
					//		span Apple ID
					button.login-route-link Forgot your password?
				form.form.login-form#signupForm
					label.form-label
						span.form-label-text Login
						input(type='text' name="login").form-input
					label.form-label
						span.form-label-text E-mail
						input(type='text' name="mail").form-input
					label.form-label
						span.form-label-text Password
						input(type='password' name="password").form-input
					label.form-label
						span.form-label-text Confirm Password
						input(type='password' name="confirm_password").form-input
					button.btn.form-btn Signup
					button.login-route-link(type="button" data-target="loginForm" data-click="front:changeLoginForm") or go to the login tab