	.section
		+inc('js','front.js',false)(type="module")
	.popup(data-click='front:closeModalByBgc')
	.section
		.hidden
			.popup-body.popup-login
				.login-header
					button.login-header-btn.active(data-target="loginForm" data-click='front:changeLoginForm') Login
					button.login-header-btn(data-target="signupForm" data-click='front:changeLoginForm') Signup
				form.form.login-form.active#loginForm
					label.form-label
						span.form-label-text Login
						input(type='text' name="login").form-input
					label.form-label
						span.form-label-text Password
						input(type='password' name="password").form-input
					button.btn.form-btn Login
